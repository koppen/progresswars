.section

  %h1
    Your mission:
    = @task.name

  .task
    .bar
      =progress_bar((100.0 * @task.clicks / @task.clicks_to_complete).round)

  = link_to('Perform mission', {:action => 'perform'}, :class => 'button')
  = javascript_tag do
    $('.button').click(function() { return Task.perform() })
